{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noEmitHelpers": true,
        "noEmitOnError": true,
        "skipLibCheck": true,
        "lib": [
            "es6",
            "dom",
            "es2015.iterable"
        ],
        "baseUrl": ".",
        "paths": {
            "~/*": [
                "src/*"
            ],
            "*": [
                "./node_modules/*"
            ],
            "@interfaces/*": [
                "app/interfaces/*"
            ],
            "@services/*": [
                "app/shared/services/*"
            ],
            "@pipes/*": [
                "app/shared/pipes/*"
            ],
            "@directives/*": [
                "app/shared/directives/*"
            ],
            "@components/*": [
                "app/shared/components/*"
            ],
            "@constants/*": [
                "app/constants/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "platforms"
    ]
}
